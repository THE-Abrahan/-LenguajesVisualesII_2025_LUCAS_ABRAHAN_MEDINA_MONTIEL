        <input type="text" placeholder="Dirección" id="direccion" name="direccion" value="">
        <input type="text" placeholder="Página web" id="pagWeb" name="pagWeb" value="">
        <input type="email" placeholder="Correo electronico" id="email" name="email" value="">
        <input type="text" placeholder="Teléfono" id="telefono" name="telefono" value="">
        <input type="text" placeholder="Observación" id="observacion" name="observacion" value="">
        <select id="ciudad.id" name="ciudad.id">
            <option value="">Ciudad...</option>
            
        </select>
        <button type="submit">Agregar proveedor</button>
    </form>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>RUC</th>
            <th>Dirección</th>
            <th>Teléfono</th>
