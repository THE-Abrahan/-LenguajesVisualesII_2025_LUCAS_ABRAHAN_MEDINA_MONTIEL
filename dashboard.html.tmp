</section>




<section>
    <h2>Clientes</h2>
    <form class="inline-form" action="/clientes" method="post">
        <input type="text" placeholder="Nombre" required id="nombre" name="nombre" value="">
        <input type="text" placeholder="Apellido" required id="apellido" name="apellido" value="">
    <input type="text" placeholder="Documento (CI)" required id="ci" name="ci" value="">
        <input type="email" placeholder="Correo electronico" id="email" name="email" value="">
        <input type="text" placeholder="Teléfono" id="telefono" name="telefono" value="">
        <input type="text" placeholder="Dirección" id="direccion" name="direccion" value="">
        <select required id="sexo" name="sexo"><option value="">Sexo...</option><option value="M">M</option><option value="F">F</option></select>
        <select required id="ciudad.id" name="ciudad.id">
            <option value="">Ciudad...</option>
            
        </select>
        <button type="submit">Agregar cliente</button>
    </form>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>CI</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Sexo</th>
            <th>Ciudad</th>
        </tr>
        </thead>
        <tbody>
        
        <tr class="empty">
            <td colspan="9">Sin datos todavia.</td>
        </tr>
        </tbody>
    </table>

    <section>
    <h2>Productos</h2>
    <form class="inline-form" action="/productos" method="post">
        <input type="text" placeholder="Código (ID, hasta 13 caracteres)" required id="id" name="id" value="">
        <select required id="marca.id" name="marca.id">
            <option value="">Marca...</option>
            <option value="1">MarcaPrueba</option>
            <option value="2">MarcaPrueba2</option>
        </select>
        <input type="text" placeholder="Nombre" required id="nombre" name="nombre" value="">
        <input type="text" placeholder="Descripción" id="descripcion" name="descripcion" value="">
        <input type="number" placeholder="Precio de compra" min="0" step="0.01" required id="precioCompra" name="precioCompra" value="">
        <input type="text" placeholder="IVA (ej. 10%)" id="iva" name="iva" value="">
        <button type="submit">Agregar producto</button>
    </form>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Marca</th>
            <th>Precio Compra</th>
            <th>IVA</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>P-0001</td>
            <td>ProductoPrueba</td>
            <td></td>
            <td>MarcaPrueba</td>
            <td>10,50</td>
            <td>12</td>
        </tr>
        <tr>
            <td>P-0002</td>
            <td>ProductoPrueba2</td>
            <td></td>
            <td>MarcaPrueba</td>
            <td>20,50</td>
            <td>12</td>
        </tr>
        
        </tbody>
    </table>
</section>

